<BackgroundColor>:
    background_color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<RectangleBorder@Widget>:
    border_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: root.border_color
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<StyledButton@Button+BackgroundColor>:
    font_size: self.size[1] * 0.6
    background_color: 0.23, 0.30, 0.35, 1
    bold: True
    border: 4, 4, 4, 4
    color: 0.95, 0.95, 0.95, 1

<StyledActionButton@ActionButton+RectangleBorder>:
    font_size: self.size[1] * 0.6
    bold: True
    border: 4, 4, 4, 4
    color: 0.95, 0.95, 0.95, 1

<StyledLabel@Label+BackgroundColor>:
    font_size: self.size[1] * 0.6
    background_color: 0.95, 0.95, 0.95, 1
    color: 0, 0, 0, 1
    text_size: self.size
    halign: 'center'
    valign: 'middle'

<StyledActionLabel@ActionLabel+RectangleBorder>:
    font_size: self.size[1] * 0.6
    color: 0.95, 0.95, 0.95, 1
    text_size: self.size
    halign: 'center'
    valign: 'middle'

<BoardPanelWidget>:
    config: app.config
    manager: app.manager

<MenuPanelWidget>:
    orientation: "horizontal"
    background_color: 0.23, 0.30, 0.35, 1

    StyledActionButton:
        text: "+"
        size_hint: 0.1, 1
    Label:
        size_hint: 0.9, 1

<ControlsPanelWidget>:
    orientation: "vertical"
    background_color: 0.23, 0.30, 0.35, 1
	num_move_label: num_move_label
    pass_btn: pass_btn
    manager: app.manager

    Label:
        size_hint: 1, 0.15
    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 0.7
        Label:
            size_hint: 0.2, 1
        StyledActionButton:
            id: pass_btn
            size_hint: 0.15, 1
            border_color: self.color
            text: "Pass"
            on_release: root.play_pass()
        Label:
            size_hint: 0.1, 1
        StyledActionButton:
            size_hint: 0.1, 1
            text: "|<"
            on_release: root.undo(999)
        Label:
            size_hint: 0.025, 1
        StyledActionButton:
            size_hint: 0.1, 1
            text: "<"
            on_release: root.undo()
        Label:
            size_hint: 0.025, 1
        StyledActionLabel:
            id: num_move_label
            size_hint: 0.1, 1
            border_color: self.color
            text: "0"
        Label:
            size_hint: 0.025, 1
        StyledActionButton:
            size_hint: 0.1, 1
            text: ">"
            on_release: root.redo()
        Label:
            size_hint: 0.025, 1
        StyledActionButton:
            size_hint: 0.1, 1
            text: ">|"
            on_release: root.redo(999)
        Label:
            size_hint: 0.25, 1
        StyledActionButton:
            size_hint: 0.1, 1
            icon: "img/refresh.png"
            on_release: root.reset_board()
        StyledActionButton:
            size_hint: 0.1, 1
            icon: "img/menu-dots-vertical.png"
            on_release: root.switch_to_gamesetting()
    Label:
        size_hint: 1, 0.15

<InfoPanelWidget>:
    opacity: 1
    orientation: "vertical"
    background_color: 0.15, 0.3, 0.4, 1

    Label:
        size_hint: 1, 1
        background_color: 0.15, 0.3, 0.4, 1

<GamePanelWidget>:
    orientation: "horizontal"
    background_color: 0.37, 0.5, 0.7, 1
    board_panel: board_panel
    config: app.config

    BoxLayout:
        orientation: "vertical"
        size_hint: 0.8, 1
        MenuPanelWidget:
            size_hint: 1, 0.05
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.9
            Label:
                size_hint: 0.05, 1
            BoardPanelWidget:
                id: board_panel
                size_hint: 0.9, 1
                board: root.board
                tree: root.tree
                engine: root.engine
            Label:
                size_hint: 0.05, 1
        ControlsPanelWidget:
            size_hint: 1, 0.05
            board: root.board
            tree: root.tree
            engine: root.engine
    InfoPanelWidget:
        size_hint: 0.2, 1

<SelectBar@BoxLayout>:
    orientation: "horizontal"
    type: "int"
    step: 1
    itemtext: ""
    itemcolor: 0, 0, 0, 1
    itembold: False
    item_label: item_label
    left_btn: left_btn
    value_label: value_label
    right_btn: right_btn

    StyledActionLabel:
        id: item_label
        size_hint: 0.25, 1
        text: root.itemtext
        color: root.itemcolor
        bold: root.itembold
    StyledActionButton:
        id: left_btn
        size_hint: 0.25, 1
        icon: "img/angle-small-left.png"
        on_release:
            val = int(value_label.text) if root.type == "int" else float(value_label.text)
            val -= root.step
            value_label.text = str(val)
    StyledActionLabel:
        id: value_label
        text: "0"
        size_hint: 0.25, 1
        color: root.itemcolor
        bold: root.itembold
        border_color: root.itemcolor
    StyledActionButton:
        id: right_btn
        size_hint: 0.25, 1
        icon: "img/angle-small-right.png"
        on_release:
            val = int(value_label.text) if root.type == "int" else float(value_label.text)
            val += root.step
            value_label.text = str(val)

<GameSettingWidget>:
    background_color: 0.37, 0.5, 0.7, 1
    orientation: "horizontal"
    board_size_bar: board_size_bar
    komi_bar: komi_bar
    config: app.config

    Label:
        size_hint: 0.25, 1
    BoxLayout:
        orientation: "vertical"
        size_hint: 0.5, 1
        Label:
            size_hint: 1, 0.4
        SelectBar:
            id: board_size_bar
            size_hint: 1, 0.1
            itemtext: "Size"
            itemcolor: 0.95, 0.95, 0.95, 1
            itembold: True
        Label:
            size_hint: 1, 0.05
        SelectBar:
            id: komi_bar
            size_hint: 1, 0.1
            type: "float"
            step: 0.5
            itemtext: "Komi"
            itemcolor: 0.95, 0.95, 0.95, 1
            itembold: True
        Label:
            size_hint: 1, 0.25
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1
            StyledActionButton:
                size_hint: 0.45, 1
                icon: "img/check.png"
                on_release: root.confirm_and_back()
                border_color: 0.95, 0.95, 0.95, 1
            Label:
                size_hint: 0.1, 1
            StyledActionButton:
                size_hint: 0.45, 1
                icon: "img/cross.png"
                on_release: root.back_only()
                border_color: 0.95, 0.95, 0.95, 1
        Label:
            size_hint: 1, 0.4
    Label:
        size_hint: 0.25, 1
