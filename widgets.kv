        Label:
            size_hint: 0.025, 1
        StyledActionButton:
            size_hint: 0.1, 1
            icon: "img/angle-small-left.png"
            on_release: root.undo()
        Label:
            size_hint: 0.025, 1
        StyledActionLabel:
            id: num_move_label
            size_hint: 0.1, 1
            border_color: self.color
            text: "0"
        Label:
            size_hint: 0.025, 1
        StyledActionButton:
            size_hint: 0.1, 1
            icon: "img/angle-small-right.png"
