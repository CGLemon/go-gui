        Label:
            size_hint: 0.025, 1
        StyledActionButton:
            size_hint: 0.1, 1
            icon: "img/angle-double-small-right.png"
            on_release: root.redo(999)
        Label:
            size_hint: 0.25, 1
        StyledActionButton:
            size_hint: 0.1, 1
            icon: "img/refresh.png"
            on_release: root.switch_to_gamesetting()
        StyledActionButton:
            size_hint: 0.1, 1
            icon: "img/settings-sliders.png"
            on_release: root.switch_to_gameanalysis()
    Label:
        size_hint: 1, 0.15

<InfoPanelWidget>:
    opacity: 1
