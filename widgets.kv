#:import Theme theme.Theme

<BackgroundColor>:
    background_color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<RectangleBorder@Widget>:
    border_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: root.border_color
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<StyledButton@Button+BackgroundColor>:
    font_size: self.size[1] * 0.6
    background_color: 0.23, 0.30, 0.35, 1
    bold: True
    border: 4, 4, 4, 4
    color: 0.95, 0.95, 0.95, 1

<StyledActionButton@ActionButton+RectangleBorder>:
    font_size: self.size[1] * 0.6
    bold: True
    border: 4, 4, 4, 4
    color: 0.95, 0.95, 0.95, 1

<StyledLabel@Label+BackgroundColor>:
    font_size: self.size[1] * 0.6
    background_color: 0.95, 0.95, 0.95, 1
    color: 0, 0, 0, 1
    text_size: self.size
    halign: 'center'
    valign: 'middle'

<StyledActionLabel@ActionLabel+RectangleBorder>:
    font_size: self.size[1] * 0.6
    color: 0.95, 0.95, 0.95, 1
    text_size: self.size
    halign: 'center'
    valign: 'middle'

<TextLabel@Label+BackgroundColor>:
    background_color: 0.95, 0.95, 0.95, 1
    color: 0, 0, 0, 1
    font_size: Theme.FONT_SIZE
    text_size: self.size[0] - cm(1), self.size[1] - cm(1)
    halign: 'left'
    valign: 'top'

<BoardPanelWidget>:
    config: app.config
    manager: app.manager

<MenuPanelWidget>:
    orientation: "horizontal"
    background_color: 0.23, 0.30, 0.35, 1
    manager: app.manager

