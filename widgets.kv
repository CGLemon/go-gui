<GamePanelWidget>:
    orientation: "vertical"
    background_color: Theme.DEFAULT_BACKGROUND_COLOR.get()
    board_panel: board_panel
    controls_panel: controls_panel
    config: app.config

    MenuPanelWidget:
        size_hint: 1, 0.05
    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 0.9
        Label:
            size_hint: 0.02, 1
        # InfoPanelWidget:
        #     size_hint: 0.25, 1
        #     tree: root.tree
        Label:
            size_hint: 0.02, 1
        BoardPanelWidget:
            id: board_panel
            size_hint: 0.5, 1
            board: root.board
            tree: root.tree
            engine: root.engine
            game: root
        Label:
            size_hint: 0.05, 1
    ControlsPanelWidget:
        id: controls_panel
        size_hint: 1, 0.05
        board: root.board
        board_panel: root.board_panel
        tree: root.tree
        config: root.config
        engine: root.engine
        game: root

<NumberSelectBar@BoxLayout>:
    orientation: "horizontal"
    type: "int"
    valstep: 1
    valmax: None
    valmin: None
    itemtext: ""
    itemcolor: 0, 0, 0, 1
    itembold: False
    item_label: item_label
    left_btn: left_btn
    value_label: value_label
    right_btn: right_btn

    StyledActionLabel:
        id: item_label
        size_hint: 0.45, 1
        text: root.itemtext
        color: root.itemcolor
        bold: root.itembold
    StyledActionButton:
        id: left_btn
        size_hint: 0.15, 1
        icon: "img/angle-small-left.png"
        on_release:
            val = int(value_label.text) if root.type == "int" else float(value_label.text)
            val -= root.valstep
            val = root.valmin if root.valmin is not None and val < root.valmin else val
            val = root.valmax if root.valmax is not None and val > root.valmax else val
            value_label.text = str(val)
    StyledActionLabel:
        id: value_label
        text: "0"
        size_hint: 0.25, 1
        color: root.itemcolor
        bold: root.itembold
        border_color: root.itemcolor
    StyledActionButton:
        id: right_btn
        size_hint: 0.15, 1
        icon: "img/angle-small-right.png"
        on_release:
            val = int(value_label.text) if root.type == "int" else float(value_label.text)
            val += root.valstep
            val = root.valmin if root.valmin is not None and val < root.valmin else val
            val = root.valmax if root.valmax is not None and val > root.valmax else val
            value_label.text = str(val)

<ElementSelectBar@BoxLayout>:
    orientation: "horizontal"
    elemset: ["NA"]
    elemidx: 0
    itemtext: ""
    itemcolor: 0, 0, 0, 1
    itembold: False
    item_label: item_label
    left_btn: left_btn
    elem_label: elem_label
    right_btn: right_btn

    StyledActionLabel:
        id: item_label
        size_hint: 0.45, 1
        text: root.itemtext
        color: root.itemcolor
        bold: root.itembold
    StyledActionButton:
        id: left_btn
        size_hint: 0.15, 1
        icon: "img/angle-small-left.png"
        on_release:
            next_elemidx = root.elemidx - 1
            root.elemidx = len(root.elemset) - 1 if next_elemidx < 0 else next_elemidx
            elem_label.text = root.elemset[root.elemidx]
    StyledActionLabel:
        id: elem_label
        text: root.elemset[root.elemidx]
        size_hint: 0.25, 1
        color: root.itemcolor
        bold: root.itembold
        border_color: root.itemcolor
    StyledActionButton:
        id: right_btn
        size_hint: 0.15, 1
        icon: "img/angle-small-right.png"
        on_release:
            next_elemidx = root.elemidx + 1
            root.elemidx = 0 if next_elemidx >= len(root.elemset) else next_elemidx
            elem_label.text = root.elemset[root.elemidx]

<GameAnalysisWidget>:
    background_color: Theme.DEFAULT_BACKGROUND_COLOR.get()
    orientation: "horizontal"
    show_bar: show_bar
    pv_bar: pv_bar
    ownership_bar: ownership_bar
    config: app.config

    Label:
        size_hint: 0.25, 1
    BoxLayout:
        orientation: "vertical"
        size_hint: 0.5, 1
        Label:
            size_hint: 1, 0.4
        ElementSelectBar:
            id: show_bar
            size_hint: 1, 0.1
            elemset: ["W+V", "S+V", "W+V+S", "W+D+V", "P", "R", "NA"]
            itemtext: "Show"
            itemcolor: 0.95, 0.95, 0.95, 1
            itembold: True
        Label:
            size_hint: 1, 0.05
        ElementSelectBar:
            id: pv_bar
            size_hint: 1, 0.1
            elemset: ["False", "True"]
            elemidx: 1
            itemtext: "PV"
            itemcolor: 0.95, 0.95, 0.95, 1
            itembold: True
        Label:
            size_hint: 1, 0.05
        ElementSelectBar:
            id: ownership_bar
            size_hint: 1, 0.1
            elemset: ["False", "True"]
            itemtext: "Ownership"
            itemcolor: 0.95, 0.95, 0.95, 1
            itembold: True
        Label:
            size_hint: 1, 0.25
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1
            StyledActionButton:
                size_hint: 0.45, 1
                icon: "img/check.png"
                on_release: root.confirm_and_back()
                border_color: 0.95, 0.95, 0.95, 1
            Label:
                size_hint: 0.1, 1
            StyledActionButton:
                size_hint: 0.45, 1
                icon: "img/cross.png"
                on_release: root.back_only()
                border_color: 0.95, 0.95, 0.95, 1
        Label:
            size_hint: 1, 0.4
    Label:
        size_hint: 0.25, 1

