            valmin: root.config.get("game")["minsize"]
            itemtext: "Size"
            itemcolor: Theme.PANEL_LINE_COLOR.get()
            itembold: True
        Label:
            size_hint: 1, 0.05
        NumberSelectBar:
            id: komi_bar
            size_hint: 1, 0.1
            type: "float"
